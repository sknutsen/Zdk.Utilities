@namespace Zdk.Utilities.Blazor
@typeparam TItem

<table class="table" style="text-align: center;">
    <thead>
        <tr>@TableHeader</tr>
    </thead>
</table>
<div style="max-height: 50vh; overflow-y: auto;">
    <table class="table" style="text-align: center;">
        <tbody>
            @foreach (var item in Items)
            {
                <tr>@RowTemplate(item)</tr>
            }
        </tbody>
    </table>
</div>
<table class="table" style="text-align: center;">
    <tfoot>
        <tr>@TableFooter</tr>
    </tfoot>
</table>
